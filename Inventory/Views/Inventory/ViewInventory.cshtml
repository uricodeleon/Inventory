
@{
    ViewBag.Title = "ViewInventory";
}

<link href="~/Content/ProjectCss/ViewInventory.css" rel="stylesheet">

<div class="page-title">
    <div class="title_left">
        <h3>List Of Items</h3>
    </div>

</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-primary" style="width:150px" data-toggle="modal" data-target="#addInventoryModal">
                            Add New Item
                        </button>
                        <button type="button" class="btn btn-primary" style="width:150px" data-toggle="modal" data-target="#addItemCategoryModal">
                            Add Item Category
                        </button>
                    </div>
                </div>
                <table id="inventoryDataTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Item Category</th>
                            <th>Item Measurement</th>
                            <th>Item Name</th>
                            <th>Item Code</th>
                            <th>Item Quantity</th>
                            <th>Item Price</th>
                            <th>Item Supplier</th>
                            <th>Date Added</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>


            <!--Add item Modal-->
            <div class="modal fade bs-example-modal-lg" id="addInventoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog  modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Add Invenory Item</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">
                            <div class="row">
                                <div class="x_panel">
                                    <div class="col-sm-6">
                                        <div class="x_content">
                                            <div class="row">
                                                <div class="col-sm-3">Item Category</div>
                                                <div class="col-md-7">
                                                    <select class="select2_single form-control" tabindex="-1" id="categorySelect">                                                    
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row top-buffer">
                                                <div class="col-sm-3">Item Name</div>
                                                <div class="col-md-7"><input class="form-control input-sm" id="itemName" placeholder="Item Name:" /></div>
                                            </div>
                                            <div class="row top-buffer">
                                                <div class="col-sm-3">Item Code</div>
                                                <div class="col-md-7"><input class="form-control input-sm" id="itemCode" placeholder="Item Code:" /></div>
                                            </div>
                                            <div class="row top-buffer">
                                                <div class="col-sm-3">Item Quantity</div>
                                                <div class="col-md-7"><input class="form-control input-sm" id="itemQuantity" placeholder="Item Quantity:" /></div>
                                            </div>
                                            <div class="row top-buffer">
                                                <div class="col-sm-3">Item Price</div>
                                                <div class="col-md-7"><input class="form-control input-sm" id="itemPrice" placeholder="Item Price:" /></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!--Second -->
                                    <div class="col-sm-6">
                                        <div class="x_content">
                                            <div class="row top-buffer">
                                                <div class="col-sm-3">Supplier</div>
                                                <div class="col-md-7"><input class="form-control input-sm" placeholder="Item Supplier:" id="itemSupplier" /></div>
                                            </div>
                                            <div class="row top-buffer">
                                                <div class="col-sm-3">Item Measurement</div>
                                                <div class="col-md-7">
                                                    <select class="select2_single form-control" tabindex="-1" id="itemMeasurementSelect">
                                                      
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Modal elements -->
                        <!--END-->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" onclick="return AddItemInventory()">Save changes</button>
                        </div>
                    </div>
                </div>
            </div> <!--End of Add Item Modal-->
            <!--Add Item Category Modal-->
            <div class="modal fade bs-example-modal-md" id="addItemCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog  modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Add Item Category</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>


                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="x_content">
                                        <div class="row">
                                            <div class="col-sm-10">Item Category</div>
                                        </div>
                                        <div class="row top-buffer">
                                            <div class="col-md-10">
                                                <input id="itmCategoryField" class="form-control input-sm" placeholder="Add Item Category" />
                                            </div>
                                        </div>
                                        <div class="row top-buffer">
                                            <div class="col-md-10">
                                                <button class="btn btn-primary" onclick="return AddItemCategory()" style="width:215px;" type="button">
                                                    Add
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="x_content">
                                        <div class="row top-buffer">
                                            @*<div class="row">
                                                <div class="col-sm-10">Category List</div>
                                            </div>*@
                                            <table id="categorytable" class="table table-striped table-bordered"  style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>Id</th>
                                                        <th>Item Category</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End of Item Category Modal-->
            </div>
        </div>
    </div>

</div>

