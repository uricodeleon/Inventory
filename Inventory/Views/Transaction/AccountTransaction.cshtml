
@{
    ViewBag.Title = "AccountTransaction";
}

<div class="modal fade bs-example-modal-lg" id="transaction" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Account Transaction</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="x_panel">
                            <div class="x_title">
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">


                                <div class="row">
                                    <div class="col-sm-2">Account Code:</div>
                                    <div class="col-sm-4"><input class="form-control input-sm" readonly="readonly" /></div>
                                    <div class="col-sm-2">Customer Name:</div>
                                    <div class="col-sm-4"><input class="form-control input-sm" readonly="readonly" /></div>
                                </div>

                                <div class="row top-buffer">
                                    <div class="col-sm-2">Custoemr Name:</div>
                                    <div class="col-sm-4"><input class="form-control input-sm" readonly="readonly" /></div>
                                    <div class="col-sm-2">Discount:</div>
                                    <div class="col-sm-4"><input class="form-control input-sm" readonly="readonly" /></div>
                                </div>
                                <div class="row top-buffer">
                                    <div class="col-sm-2">Address:</div>
                                    <div class="col-sm-4"><input class="form-control input-sm" readonly="readonly" /></div>
                                </div>
                                <div class="row top-buffer">
                                    <div class="col-sm-2">Contact Number:</div>
                                    <div class="col-sm-4"><input class="form-control input-sm" readonly="readonly" /></div>
                                </div>


                                <div class="container-fluid top-buffer2">
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Item Quantity</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Pack Qty" /></div>
                                    </div>
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Pack Unit</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Pack Unit"/></div>
                                    </div>
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Sales Qty</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Sales Qty"/></div>
                                    </div>
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Total Sales</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Total Sales" /></div>
                                    </div>
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Sales Unit</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Sales Unit"/></div>
                                    </div>
                                </div>
                               

                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="x_panel">
                            <div class="x_title">
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                               
                        </div>
                    </div>
                </div>
                </div>

               
