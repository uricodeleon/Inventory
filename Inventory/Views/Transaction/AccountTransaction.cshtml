
@{
    ViewBag.Title = "AccountTransaction";
}

<div class="modal fade bs-example-modal-lg" id="transaction" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Account Transaction</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="x_panel">
                            <div class="x_title">
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <div class="row">
                                    <div class="col-sm-2">Account Code:</div>
                                    <div class="col-sm-4"><input id="transactionAccountCode" class="form-control input-sm" readonly="readonly" /></div>
                                    <div class="col-sm-2">Customer Type:</div>
                                    <div class="col-sm-4"><input id="transactionCustomerType" class="form-control input-sm" readonly="readonly" /></div>
                                </div>

                                <div class="row top-buffer">
                                    <div class="col-sm-2">Customer Name:</div>
                                    <div class="col-sm-4"><input id="transactionCustomerName" class="form-control input-sm" readonly="readonly" /></div>
                                    <div class="col-sm-2">Discount:</div>
                                    <div class="col-sm-4"><input id="transactionDiscount" class="form-control input-sm" /></div>
                                </div>
                                <div class="row top-buffer">
                                    <div class="col-sm-2">Address:</div>
                                    <div class="col-sm-4"><input id="transactionAddress" class="form-control input-sm" readonly="readonly" /></div>

                                </div>
                                <div class="row top-buffer">
                                    <div class="col-sm-2">Contact Number:</div>
                                    <div class="col-sm-4"><input id="transactionContactNumber" class="form-control input-sm" readonly="readonly" /></div>
                                </div>

                                <div class="container-fluid top-buffer2">
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Item Quantity</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Pack Qty" id="quantityField" /></div>
                                    </div>
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Pack Unit</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Pack Unit" id="packUnitField" /></div>
                                    </div>
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Sales Qty</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Sales Qty" id="salesQuantityField" /></div>
                                    </div>
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Total Sales</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Total Sales" id="totalSalesField" /></div>
                                    </div>
                                    <div class="row top-buffer">
                                        <div class="col-sm-2">Sales Unit</div>
                                        <div class="col-sm-4"><input class="form-control input-sm" placeholder="Sales Unit" id="salesUnitField" /></div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="x_panel">
                            <div class="x_title">
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">

                                <div class="row">
                                    <div class="col-sm-2">Item</div>
                                </div>

                                <div class="row top-buffer">
                                    <div class="col-md-6 col-sm-6 "><input class="form-control input-sm" placeholder="Search..." /></div>
                                    <div class="col-sm-2">Item Name:</div>
                                    <div class="col-sm-4"><input class="form-control input-sm" placeholder="Item Name:" id="itemNameField" /></div>
                                </div>
                                <div class="row top-buffer">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select class="select2_single form-control" tabindex="-1" id="categoryTransactionSelect"></select>

                                    </div>
                                    <div class="col-sm-2">Item Number</div>
                                    <div class="col-sm-4"><input class="form-control input-sm" placeholder="Item No." id="itemNumberField" /></div>
                                </div>
                                <div class="row top-buffer">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select class="select2_multiple form-control" id="inventoryItemSelect" multiple="multiple" size="10"></select>
                                    </div>
                                    <div class="col-sm-2">Item Price:</div>
                                    <div class="col-sm-4"><input class="form-control input-sm" placeholder="Price" id="itemFieldPrice" /></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <table id="transactionDetailsDatatable" class="table table-striped table-bordered"  style="width:100%" >
                                        <thead>
                                            <tr>      

                                                <th>Account Number</th>
                                                <th>Item Name</th>
                                                <th>Item Code</th>
                                                <th>Item Quantity</th>
                                                <th>Item Price</th>
                                                <th>Pack Unit</th>
                                                <th>Sales Qty</th>
                                                <th>Sales Unit</th>
                                                <th>Total Sales</th>
                                                <th>Ammount</th>    
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input  type="hidden" id="accountNumberHolder" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="return AccountTransaction()">Add Transaction</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    var m_accountNumber = ""; //use to pass accountNumber in diferent scripts.

</script>
