
@{
    ViewBag.Title = "ViewCustomer";
}

<h3>Customer's List </h3>

<div class="page-title">
    <div class="title_left">
        <h3>List of Customer</h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Default Example <small>Users</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Account Number</th>
                            <th>Account code</th>
                            <th>Customer Type</th>
                            <th>Terms</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Contact Number</th>
                            <th>Date Added</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <!-- Modal -->
        <!--Edit Modal-->
        <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Edit Account</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <label class="control-label col-md-2" for="customer-type">Customer Type </label>
                            <div class="radio-inline">
                                <div class="radio">
                                    <label><input type="radio" id="Walkin" class="flat" name="iCheck" value="Customer/Walk-In" /> Customer/Walk-In </label>
                                </div>
                                <div class="radio">
                                    <label><input type="radio" id="contraual" class="flat" name="iCheck" value="Contractual" /> Contractual </label>
                                </div>
                                <div class="radio">
                                    <label> <input type="radio" id="dealer" class="flat" name="iCheck" value="Dealer" /> Dealer </label>
                                </div>
                            </div>
                        </div>


                        <!--Modal elements --> <!--START-->
                        <div class="row">
                            <label class="control-label col-md-3" for="name">Name</label>
                            <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                                <input type="text" placeholder="Name" class="form-control" id="firstName">
                            </div>
                        </div>


                        <div class="row">
                            <label class="control-label col-md-3" for="last-name">Last Name</label>
                            <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                                <input type="text" placeholder="Name" class="form-control" id="lastName">
                            </div>
                        </div>

                        <div class="row">
                            <label class="control-label col-md-3" for="address">Address</label>
                            <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                                <input type="text" placeholder="Address" class="form-control" id="address">
                            </div>
                        </div>

                        <div class="row">
                            <label class="control-label col-md-3" for="terms">Terms</label>
                            <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                                <input type="text" placeholder="Terms" class="form-control" id="terms">
                            </div>
                        </div>

                        <div class="row">
                            <label class="control-label col-md-3" for="contact-number">Contact Number</label>
                            <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                                <input type="text" placeholder="Contact Number" class="form-control" id="contactNumber">
                            </div>
                        </div>
                    </div>
                    <!--Modal elements --> <!--END-->
                    <div class="modal-footer">
                        <input type="text" id="result" value="" />
                        <input type="hidden" id="accountHolder" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" onclick="return UpdateCustomerAccount()">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        
           <!--Partial View Here-->
            @Html.Partial("/Views/Transaction/AccountTransaction.cshtml")
        

    </div>
</div>
