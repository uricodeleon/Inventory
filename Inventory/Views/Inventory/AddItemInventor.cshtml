        <form class="form-group">

            <div class="row">
                <label class="control-label col-md-1" for="account-code">Item Category</label>
                <div class="col-md-2 col-sm-12 col-xs-12 form-group">
                    <select class="form-control" ng-model="itemCategory">

                        <option value="1">Option one</option>
                        <option value="2">Option two</option>
                        <option value="3">Option three</option>
                        <option value="4">Option four</option>
                    </select>
                </div>

            </div>

            <div class="row">
                <label class="control-label col-md-1" for="item-measurement">Item Measurement</label>
                <div class="col-md-2 col-sm-12 col-xs-12 form-group">
                    <select class="form-control" ng-model="itemMeasurement">
                        <option value="1">Option one</option>
                        <option value="2">Option two</option>
                        <option value="3">Option three</option>
                        <option value="4">Option four</option>
                    </select>
                </div>

            </div>

            <div class="row">
                <label class="control-label col-md-1" for="item-name">Item Name </label>
                <div class="col-md-2 col-sm-12 col-xs-12 form-group">
                    <input type="text" placeholder="Item Name" class="form-control" ng-model="itemName">
                </div>

